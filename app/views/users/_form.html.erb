<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :姓名 %>
    <%= f.text_field :name, :class => "span3" %>
  </div>
  <div class="field">
    <%= f.label :邮箱 %>
    <div class="input-append"><%= f.text_field :email,:class => "span2" %><span class="add-on">@ihaveu.net</span></div>
  </div>
  <div class="field">
    <%= f.label :角色 %>
    <div class="input-append">
      <%= f.select(:role, User::ROLES, {}, {:class => "span3"})%>
    </div>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "确定", :class => "btn"%>
  </div>
<% end %>
